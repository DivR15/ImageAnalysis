windowManager:
    loginWindow:
    signupWindow:
    logDataWindow:
    analysisWindow:
    dataWindow:
    postpWindow:

# GUI for the login window
<loginWindow>:
    email : email
    pwd : pwd
    GridLayout:
        cols: 1
        size_hint: 0.8,0.9
        pos: 85,25
        Image:
            source: 'RocheLogo.png'
            size_hint: 1.0, 0.5

        FloatLayout:
            size: root.width, root.height
            Label:
                text : "EMAIL: "
                font_size: 22
                size_hint : 0.2, 0.1
                pos_hint : {"x":0.07, "top":0.78}
            TextInput:
                id : email
                font_size: 22
                multiline :False
                size_hint : 0.6, 0.15
                pos_hint : {"x" : 0.27, "top" : 0.8}
            Label:
                text : "PASSWORD: "
                font_size: 22
                size_hint : 0.2, 0.1
                pos_hint : {"x" : 0.07, "top" : 0.58}
            TextInput:
                id : pwd
                font_size: 22
                multiline :False
                size_hint : 0.6, 0.15
                pos_hint : {"x" : 0.27, "top" : 0.6}
            Button:
                text : "Create an account"
                font_size: 18
                size_hint : 0.4, 0.15
                pos_hint : {"x" : 0.33, "top" : 0.15}
                background_color: 0, 0.482, 0.765, 1
                background_normal : ''
                on_release:
                    app.root.current = 'signup'
                    root.manager.transition.direction = "left"

            Button:
                text : "Log In"
                font_size: 20
                size_hint : 0.4, 0.15
                pos_hint : {"x" : 0.33, "top" : 0.35}
                background_color: 0, 0.482, 0.765, 1
                background_normal : ''
                on_release:
                    root.validate()
                    root.manager.transition.direction = "up"

# GUI for the signup window
<signupWindow>:
    name2 : name2
    email : email
    pwd : pwd
    GridLayout:
        cols: 1
        size_hint: 0.8,0.9
        pos: 85,25
        Image:
            source: 'RocheLogo.png'
            size_hint: 1.0, 0.5
        FloatLayout:
            Label:
                text : "NAME: "
                font_size: 22
                size_hint : 0.2, 0.1
                pos_hint : {"x":0.15, "top":0.9}
            TextInput:
                id : name2
                multiline : False
                font_size: 22
                size_hint : 0.5, 0.11
                pos_hint : {"x" : 0.32, "top" : 0.9}
            Label:
                text : "EMAIL: "
                font_size: 22
                size_hint : 0.2, 0.1
                pos_hint : {"x" : 0.15, "top" : 0.75}
            TextInput:
                id : email
                multiline : False
                font_size: 22
                size_hint : 0.5, 0.11
                pos_hint : {"x" : 0.32, "top" : 0.75}
            Label:
                text : "PASSWORD: "
                font_size: 22
                size_hint : 0.2, 0.1
                pos_hint : {"x" : 0.118, "top" : 0.6}
            TextInput:
                id : pwd
                multiline : False
                font_size: 22
                size_hint : 0.5, 0.11
                pos_hint : {"x" : 0.32, "top" : 0.6}
            Button:
                text : "Submit"
                font_size: 22
                size_hint : 0.3, 0.15
                pos_hint : {"x" : 0.35, "top" : 0.35}
                background_color: 0, 0.482, 0.765, 1
                background_normal : ''
                on_press :
                    root.signupbtn()
                    root.manager.transition.direction = "right"
            Button:
                text : "Back"
                font_size: 22
                size_hint : 0.3, 0.15
                pos_hint : {"x" : 0.35, "top" : 0.15}
                background_color: 0, 0.482, 0.765, 1
                background_normal : ''
                on_press :
                    app.root.current = 'login'
                    root.manager.transition.direction = "right"


# GUI to show validation result
<logDataWindow>:
    info : info
    GridLayout:
        cols: 1
        size_hint: 0.8,0.9
        pos: 85,25
        Image:
            source: 'RocheLogo.png'
            size_hint: 1.0, 0.5
        FloatLayout:
            Label:
                id : info
                size_hint : 0.8, 0.2
                pos_hint : {"x" : 0.1, "top" : 0.9}
                text : "SUCCESSFULLY LOGGED IN"
            Button:
                text : "Run Analysis"
                font_size: 22
                size_hint : 0.3, 0.15
                background_color: 0, 0.482, 0.765, 1
                background_normal : ''
                pos_hint : {"x" : 0.35, "top" : 0.65}
                on_release:
                    app.root.current = 'analysis'
                    root.manager.transition.direction = "left"
            Button:
                text : "See Stored Data"
                font_size: 22
                size_hint : 0.3, 0.15
                background_color: 0, 0.482, 0.765, 1
                background_normal : ''
                pos_hint : {"x" : 0.35, "top" : 0.4}
                on_release:
                    app.root.current = 'data'
                    root.manager.transition.direction = "left"
            Button:
                text : "Log off"
                font_size: 22
                size_hint : 0.3, 0.15
                background_color: 0, 0.482, 0.765, 1
                background_normal : ''
                pos_hint : {"x" : 0.35, "top" : 0.15}
                on_release:
                    app.root.current = 'login'
                    root.manager.transition.direction = "right"


<dataWindow>:
    GridLayout:
        cols: 1
        size_hint: 0.8,0.9
        pos: 85,25
        Image:
            source: 'RocheLogo.png'
            size_hint: 1.0, 0.5
        FloatLayout:
            Label:
                id : info
                size_hint : 0.8, 0.2
                font_size: 28
                pos_hint : {"x" : 0.1, "top" : 0.85}
                text : "To see stored data open data.csv file"
            Button:
                text : "Back"
                font_size: 22
                size_hint : 0.3, 0.15
                background_color: 0, 0.482, 0.765, 1
                background_normal : ''
                pos_hint : {"x" : 0.35, "top" : 0.45}
                on_release:
                    app.root.current = 'logdata'
                    root.manager.transition.direction = "right"


# GUI for analysis
<analysisWindow>:
    ultraid : ultraid
    GridLayout:
        cols: 1
        size_hint: 0.8,0.9
        pos: 85,25
        Image:
            source: 'RocheLogo.png'
            size_hint: 1.0, 0.5
        FloatLayout:
            Label:
                text : "Make sure cart is aligned before beginning analysis"
                font_size: 22
                pos_hint : {"x" : 0.1, "top" : 0.9}
                size_hint : 0.8, 0.2
            Label:
                text : "Input the name of the ULTRA to be analyzed:"
                font_size: 22
                pos_hint : {"x" : 0.1, "top" : 0.75}
                size_hint : 0.8, 0.2
            Label:
                text : "ULTRA ID: "
                font_size: 22
                size_hint : 0.2, 0.1
                pos_hint : {"x":0.15, "top":0.6}
            TextInput:
                id : ultraid
                multiline : False
                font_size: 22
                size_hint : 0.5, 0.11
                pos_hint : {"x" : 0.32, "top" : 0.6}
            Button:
                text : "Begin Analysis"
                font_size: 22
                size_hint : 0.3, 0.15
                background_color: 0, 0.482, 0.765, 1
                background_normal : ''
                pos_hint : {"x" : 0.35, "top" : 0.25}
                on_release:
                    root.dataanalysis()
                    app.root.current = 'postp'
                    root.manager.transition.direction = "left"


# GUI for post processing options
<postpWindow>:
    FloatLayout:
        Image:
            source: 'data.png'
            size_hint: 1.0, 1.0
            pos_hint: {"x" : 0.0, "top" : 1.1}
        Button:
            text : "Run another analysis"
            font_size: 22
            size_hint : 0.35, 0.1
            background_color: 0, 0.482, 0.765, 1
            background_normal : ''
            pos_hint : {"x" : 0.33, "top" : 0.30}
            on_release:
                app.root.current = 'analysis'
                root.manager.transition.direction = "left"
        Button:
            text : "Log off"
            font_size: 22
            size_hint : 0.35, 0.1
            background_color: 0, 0.482, 0.765, 1
            background_normal : ''
            pos_hint : {"x" : 0.33, "top" : 0.15}
            on_release:
                app.root.current = 'login'
                root.manager.transition.direction = "right"


# GUI for pop up window
<P>:
    Label:
        text : "Please enter valid information"
        size_hint : 0.2, 0.1
        pos_hint : {"x" : 0.3, "top" : 0.8}
